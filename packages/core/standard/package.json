{
    "private": true,
    "name": "@solana/wallet-standard",
    "version": "0.1.0",
    "author": "Solana Maintainers <maintainers@solana.foundation>",
    "repository": "https://github.com/solana-labs/wallet-standard",
    "license": "Apache-2.0",
    "type": "module",
    "sideEffects": false,
    "main": "./lib/cjs/src/index.js",
    "module": "./lib/esm/src/index.js",
    "exports": {
        "import": "./lib/esm/src/index.js",
        "require": "./lib/cjs/src/index.js"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx mkdir -p lib/{cjs,esm} && echo '{\"type\":\"commonjs\"}' | npx json > ./lib/cjs/package.json && echo '{\"type\":\"module\"} ' | npx json > ./lib/esm/package.json",
        "prebuild": "pnpm run clean && pnpm run package"
    },
    "devDependencies": {
        "shx": "^0.3.4",
        "typescript": "^4.7.4"
    }
}
